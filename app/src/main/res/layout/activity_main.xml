<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/left_swipe"
    android:orientation="vertical"
    android:background="@drawable/background_logo"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@drawable/workshop_lg" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_logo"
            android:layout_centerHorizontal="true"
            android:text=" TECH - WORK"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:elevation="5dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:layout_width="0px"
            android:layout_height="0px" />
        <EditText
            android:id="@+id/login_email_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-Mail"
            android:layout_marginTop="32dp"
            android:inputType="textEmailAddress"
            android:background="#11000000"
            android:paddingRight="16dp"
            android:drawableStart="@drawable/ic_username"
            android:layout_margin="8dp"
            android:paddingLeft="16dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            tools:ignore="RtlCompat" />
        <EditText
            android:id="@+id/login_password_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="#11000000"
            android:inputType="textPassword"
            android:layout_below="@id/login_email_edit"
            android:layout_margin="8dp"
            android:paddingRight="16dp"
            android:drawableLeft="@drawable/ic_loginblack"
            android:paddingLeft="16dp"
            android:textColor="#fff"
            android:textColorHint="#fff"
            />
        <TextView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="login"
            android:text="LOGIN"
            android:gravity="center_horizontal|center_vertical"
            android:layout_below="@id/login_password_edit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:textColor="#fff"
            android:background="@drawable/corner"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:textStyle="bold"
            android:shadowColor="#424242"
            android:backgroundTint="#aed581"
            />
        <TextView
            android:id="@+id/sign_up"
            android:onClick="signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:text="SIGNUP"
            android:textColor="#fff"
            android:gravity="center_vertical|center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/corner"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="64dp"
            android:layout_below="@id/login"
            android:textStyle="bold"
            android:shadowColor="#424242"
            android:backgroundTint="#aed581"
            />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="51dp"
            android:layout_below="@+id/sign_up"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:background="@drawable/swipe_logo"></ImageView>
    </RelativeLayout>
</LinearLayout>